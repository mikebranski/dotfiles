#!/bin/sh
#
# Restart VirtualBox 4.3+

echo "Restarting VirtualBox... Remember, kids, sharing is caring!"

# echo out the command for easy sending to colleagues
echo "sudo launchctl load /Library/LaunchDaemons/org.virtualbox.startup.plist"

# Restart dem boxes!
sudo launchctl load /Library/LaunchDaemons/org.virtualbox.startup.plist
